
<form action="/" method="GET">
  <input type="submit" value="Return to Gifs" />
</form>

<div class="adminMain">

<% @users.each do |user| %>
    <ul id="<%= user.id %>">
    <li>Username: <%= user.username %></li>
    <li>email: <%= user.email %></li>
    <li>Is admin?: <%= user.admin %></li>

    <% if user.admin == false %>
      <div class="adminButtons">
        <%= button_to "Promote", {:controller => :admins,
        :action => 'promote', :id => user.id }, :method => :post %>
      </div>

        <% else %>
      <div class="adminButtons">
        <%= button_to "Demote", {:controller => :admins,
        :action => 'demote', :id => user.id }, :method => :post %>
      </div>

    <% end %>

    <div class="adminButtons">
      <%= button_to "delete", {:controller => :admins,
      :action => 'destroy', :id => user.id }, :method => :delete %>
    </div>

  </ul>
<% end %>

</div>



